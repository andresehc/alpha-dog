
<%= render 'shared/errors', obj:@user %>

  <div class="row">
    <div class="col-md-12">
      <%= form_for @user, :html =>{ class:"form-horizontal", role:"form"} do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :username %>
          </div>
          <div class="col-sm-6 col-lg-8">
            <%= f.text_field :username, class:"form-control",placeholder:"Enter your username here",autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-7 col-lg-8">
            <%= f.text_field :email, class:"form-control",placeholder:"Enter your email"%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
          <div class="col-sm-7 col-lg-8">
            <%= f.text_field :password, class:"form-control",placeholder:"Enter your password here!"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit @user.new_record? ? "Sign Up" : "Update my information",  class:'btn btn-primary btn-lg' %>
              <%= link_to "Back", articles_path, class:'btn btn-primary btn-lg'%>
          </div>
        </div>
        <%end%>
    </div>
  </div>