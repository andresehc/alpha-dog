<div align="center">
  <%= will_paginate %>
  <% @users.each do |user|%>
    <ul class="user-info">
      <div class="row">      
        <div class="well col-md-4 col-md-offset-4 ">
          <div align="center">
            <li><%= link_to gravatar_for(user), user_path(user)%></li>
            <li><strong><%= link_to user.username, user_path(user)%></strong></li>
            <li><strong><%= user.email%></strong></li>
            <li id="user-footer"><small><%= pluralize(user.articles.count,"article") if user.articles %></small></li>
            <li> 
              <% if logged_in? && current_user.admin?%>
                <%= link_to "Delete user", user_path(user), method: :delete, data:{confirm:"Are you sure you want to delete the user and all his/her articles?"}%>
            
              <%end%>            
            </li>
          </div>
        </div>
      </div>      
    </ul>
  <%end%>
  <%= will_paginate %>
</div>

          
       
         
           
             
        

              



